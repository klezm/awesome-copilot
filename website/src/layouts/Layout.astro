---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="/src/styles/global.css" />
	</head>
	<body>
		<header class="site-header">
			<div class="container">
				<a href="/" class="logo">Awesome Copilot</a>
				<nav>
					<a href="/chatmodes">Chatmodes</a>
					<a href="/instructions">Instructions</a>
					<a href="/prompts">Prompts</a>
					<a href="/search">Search</a>
				</nav>
				<div class="theme-switcher">
					<input type="checkbox" id="theme-toggle" />
					<label for="theme-toggle" class="theme-toggle-label"></label>
				</div>
			</div>
		</header>
		<main class="container">
			<slot />
		</main>
		<footer class="site-footer">
			<div class="container">
				<p>&copy; {new Date().getFullYear()} Awesome Copilot. All rights reserved.</p>
			</div>
		</footer>
		<script src="/src/scripts/theme-toggle.js"></script>
	</body>
</html>
