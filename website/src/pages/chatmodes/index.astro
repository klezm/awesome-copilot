---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import CollectionGrid from '../../components/CollectionGrid.astro';
import SectionHeader from '../../components/SectionHeader.astro';

const chatmodes = await getCollection('chatmodes');
---

<Layout title="Chatmodes">
  <SectionHeader title="Chatmodes" description="Explore available chatmode configurations for AI assistants." />

  <CollectionGrid items={chatmodes} hrefPrefix="/chatmodes" metaFields={["model"]} emptyMessage="No chatmodes found." />
</Layout>
