---
import { getEntry, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const { getCollection } = await import('astro:content');
  const chatmodes = await getCollection('chatmodes');
  return chatmodes.map((entry) => ({
    params: { slug: entry.id },
    props: { entryId: entry.id },
  }));
}

const { entryId } = Astro.props;
const entry = await getEntry('chatmodes', entryId);

if (!entry) {
  return Astro.redirect('/404');
}

const { Content } = await render(entry);
---

<Layout title={`${entry.data.title || entry.id} - Chatmodes`}>
  <nav class="breadcrumb">
    <a href="/chatmodes">Chatmodes</a> / {entry.data.title || entry.id}
  </nav>

  <article>
    <header>
      <h1>{entry.data.title || entry.id}</h1>
      {entry.data.description && (
        <p class="description">{entry.data.description}</p>
      )}
      <div class="metadata">
        {entry.data.model && (
          <span><strong>Model:</strong> {entry.data.model}</span>
        )}
      </div>
    </header>

    <div class="content">
      <Content />
    </div>
  </article>
</Layout>
