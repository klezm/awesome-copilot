---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Awesome Copilot - Markdown Explorer">
	<h1>Welcome to Awesome Copilot</h1>
	<p>Explore chatmodes, instructions, and prompts for AI development.</p>

	<div class="categories">
		<a href="/chatmodes" class="category-card">
			<h2>Chatmodes</h2>
			<p>AI assistant configurations and modes</p>
		</a>
		<a href="/instructions" class="category-card">
			<h2>Instructions</h2>
			<p>Development guidelines and best practices</p>
		</a>
		<a href="/prompts" class="category-card">
			<h2>Prompts</h2>
			<p>AI prompt templates and examples</p>
		</a>
	</div>
</Layout>

<style>
	.categories {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 1rem;
		margin-top: 2rem;
	}

	.category-card {
		display: block;
		padding: 1.5rem;
		border: 1px solid #ddd;
		border-radius: 0.5rem;
		text-decoration: none;
		color: inherit;
		transition: box-shadow 0.2s, transform 0.2s;
	}

	.category-card:hover {
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		transform: translateY(-2px);
	}

	.category-card h2 {
		margin-top: 0;
		color: #007acc;
	}

	@media (max-width: 768px) {
		.categories {
			grid-template-columns: 1fr;
			gap: 0.5rem;
		}

		.category-card {
			padding: 1rem;
		}
	}
</style>
