---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import CollectionGrid from '../../components/CollectionGrid.astro';
import SectionHeader from '../../components/SectionHeader.astro';

const instructions = await getCollection('instructions');
---

<Layout title="Instructions">
  <SectionHeader title="Instructions" description="Explore development guidelines and best practices for AI and software development." />

  <CollectionGrid items={instructions} hrefPrefix="/instructions" metaFields={["applyTo"]} emptyMessage="No instructions found." />
</Layout>
