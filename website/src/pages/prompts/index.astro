---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import CollectionGrid from '../../components/CollectionGrid.astro';
import SectionHeader from '../../components/SectionHeader.astro';

const prompts = await getCollection('prompts');
---

<Layout title="Prompts">
  <SectionHeader title="Prompts" description="Explore AI prompt templates and examples for various use cases." />

  <CollectionGrid items={prompts} hrefPrefix="/prompts" metaFields={["model","mode"]} emptyMessage="No prompts found." />
</Layout>
