---
// src/components/FilterPanel.astro
interface Props {
  filters: Record<string, any[]>;
}

const { filters } = Astro.props;
---

<div class="p-4 bg-base-200 rounded-lg shadow-inner">
  <h3 class="text-xl font-bold mb-4 border-b pb-2">Filters</h3>
  <form id="filter-form">
    {Object.entries(filters).map(([key, values]) => (
      <div class="collapse collapse-arrow bg-base-100 mb-2">
        <input type="checkbox" class="peer" checked />
        <div class="collapse-title font-semibold capitalize">
          {key}
        </div>
        <div class="collapse-content">
          {values.map(value => (
            <div class="form-control">
              <label class="label cursor-pointer justify-start gap-2">
                <input type="checkbox" name={key} value={value} class="checkbox checkbox-sm" />
                <span class="label-text">{value}</span>
              </label>
            </div>
          ))}
        </div>
      </div>
    ))}
    <div class="mt-6">
      <button type="reset" class="btn btn-secondary btn-block">Reset Filters</button>
    </div>
  </form>
</div>
